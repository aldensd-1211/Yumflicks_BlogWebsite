<%- include("header.ejs") %>

<link rel="stylesheet" href="/styles/main.css">

<div class = "px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Edit Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Overlooked an ingredient? Fear not, you have the power to perfect your culinary creation</p>
    </div>
</div>

<div class="row justify-content-center">
  
    <div class="col-8 bg-dark p-4">
  
      <form action="/update/<%= index %>" enctype="multipart/form-data" method="post">
      
        <div class="row g-3">
  
          <div class="col-12">
            <label for="name" class="form-label custom-label">Recipe Name</label>
            <input type="text" name="name" value="<%= post.name %>" class="form-control" required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label custom-label">Description</label>
            <textarea name="description" class="form-control" cols="30" rows="4"><%= post.description %></textarea>
          </div>
  
          <div class="col-12">
            <label for="category" class="custom-label">Select Category</label>
            <select class="form-select form-control custom-label" name="category" aria-label="Category">
              <option selected><%= post.category %></option>
              <option value="Thai">Thai</option>
              <option value="American">American</option>
              <option value="Chinese">Chinese</option>
              <option value="Mexican">Mexican</option>
              <option value="Indian">Indian</option>
            </select>
          </div>
  
          <div class="col-12">
            <label for="image" class="custom-label">Product Image</label>
            <input type="file" class="form-control" name="image" accept="image/*" value="post.image">
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Update Recipe</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>

<%- include("footer.ejs") %>