<%- include("header.ejs") %>

<link rel="stylesheet" href="styles/main.css">

<div class = "px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Share your amazing recipes with thousands of web developers across the world. Fill our form to get started.</p>
    </div>
</div>

<div class="row justify-content-center">
  
    <div class="col-8 bg-dark p-4">
  
      <form action="/submit-recipe" enctype="multipart/form-data" method="post">
      
        <div class="row g-3">
  
          <div class="col-12">
            <label for="email" class="form-label custom-label">Email</label>
            <input type="email" name="email" id="email" class="form-control">
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label custom-label">Recipe Name</label>
            <input type="text" name="name" id="name" class="form-control" required>
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label custom-label">Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
          </div>
  
          <div class="col-12">
            <label for="category" class="custom-label">Select Category</label>
            <select class="form-select form-control custom-label" name="category" aria-label="Category" id="category">
              <option selected>Select Category</option>
              <option value="Indian">Indian</option>
              <option value="Chinese">Chinese</option>
              <option value="Mexican">Mexican</option>
              <option value="Spanish">Spanish</option>
              <option value="Italian">Italian</option>
            </select>
          </div>
  
          <div class="col-12">
            <label for="image" class="custom-label">Product Image</label>
            <input type="file" class="form-control" name="image" accept="image/*" id="image">
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit Recipe</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>

<%- include("footer.ejs") %>